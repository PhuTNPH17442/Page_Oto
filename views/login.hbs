{{!< login}}

    <!DOCTYPE html>
<html>
<head>
	<title>Đăng nhập</title>
	<link rel="stylesheet" type="text/css" href="/css/style.css">
</head>
<body>
	
	<div class="login">
		<h1>Đăng nhập</h1>
		{{#if error}}
			<div class="error-form">
				<ul class="error-text">
					<li>
						{{error}}
					</li></ul>
			</div>
			{{/if}}
		<form id="loginForm" method="post" action="/login">
			<label for="email">Tài khoản:</label>
			<input type="text" id="email" name="email" required>
			<label for="password">Mật khẩu:</label>
			<input type="password" id="password" name="password" required>
			<div class="checkbox">
				<input type="checkbox" id="human" name="human" required>
				<label for="human">Tôi không phải người máy</label>
			</div>
			<div>
				<a class="register" href="register">Bạn chưa có tài khoản</a>
			</div>
			<button type="submit">Đăng nhập</button>
			
		</form>
		<div class="google-login">
			<button type="button"><img src="/image/google.png">Đăng nhập bằng Google</button>
		</div>
	</div>
	<div class="birds"></div>
